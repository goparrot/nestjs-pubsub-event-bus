# if you want to update the rules in this file, you MUST also update them in prettier.config.js
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 160
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{yml, yaml}]
indent_size = 2
